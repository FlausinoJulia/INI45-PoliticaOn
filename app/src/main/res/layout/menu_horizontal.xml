<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:background="@color/verde_titulo"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="41dp"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/i_inicio" />


        <ImageButton
            android:id="@+id/btnAprender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="41dp"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/i_aprender" />

        <ImageButton
            android:id="@+id/btnConhecer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="41dp"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/i_conhecer" />

        <ImageButton
            android:id="@+id/btnMonitorar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/i_monitorar" />

    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>