<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNoticia"
        android:layout_width="311dp"
        android:layout_height="140dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/verde_titulo"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/imagemNoticia"
            android:layout_weight="1"
            android:src="@drawable/not_available"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/cinza_claro"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tvTituloNoticia"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxHeight="51.22dp"
                android:text="titulo">

            </TextView>

            <TextView
                android:id="@+id/tvFonteNoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="fonte"/>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
